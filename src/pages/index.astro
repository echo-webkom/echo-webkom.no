---
import BaseHead from "../components/BaseHead.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import { links, newLinks } from "../lib/links";
import ListItem from "../components/ListItem.astro";
import { getImage } from "astro:assets";
import background from "../assets/background.png";

const backgroundImage = await getImage({ src: background });
---

<!doctype html>
<html lang="no">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body
    style={`background-image: url('${backgroundImage.src}'); background-size: 1000px auto; background-repeat: no-repeat; background-position: center top; background-color: #151515`}
    class="text-gray-300"
  >
    <main class="max-w-lg mx-auto min-h-screen py-14 sm:py-20 space-y-6 px-5">
      <div class="flex flex-row items-center gap-2">
        <img src="/webkom-logo.png" alt="echo logo" class="w-14 h-auto" />
        <h1 class="text-3xl font-bold">echo Webkom</h1>
      </div>

      <p>
        echo Webkom er utviklergruppen i Webkom. Vi jobber med Ã¥ lage og
        vedlikeholde nettsidene til
        <b> echo &ndash; Linjeforeningen for informatikk</b> ved Universitetet i
        Bergen.
      </p>

      <div>
        <ul class="flex flex-col">
          {
            links.map((link) => (
              <ListItem to={link.to}>
                <Fragment slot="title">{link.title}</Fragment>

                <Fragment slot="desc">{link.desc}</Fragment>
              </ListItem>
            ))
          }
        </ul>
      </div>

      <div>
        <h2 id="links-dev" class="text-2xl font-semibold">
          Lenker for utviklere
        </h2>

        <ul class="flex flex-col">
          {
            newLinks.map((link) => (
              <ListItem to={link.to}>
                <Fragment slot="title">{link.title}</Fragment>

                <Fragment slot="desc">{link.desc}</Fragment>
              </ListItem>
            ))
          }
        </ul>
      </div>
    </main>
  </body>
</html>
